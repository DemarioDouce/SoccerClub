@model SignupModel
@{
    Layout = "_DefaultLayout";
    ViewBag.Title = "Login";
}

<title>Login - Dream League Soccer</title>


<h2 class="cover-heading">Sign Up</h2>

<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="SignUp" asp-controller="Account" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
        <input type="password" asp-for="ConfirmPassword" class="form-control" required />
    </div>
    <button class="btn btn-primary" type="submit">Sign Up</button>
    <div class="form-group">
        <a asp-action="Login" asp-controller="Account">Already have an account? Login Here</a>
    </div>
</form>

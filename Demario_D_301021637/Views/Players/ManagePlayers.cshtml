@model IEnumerable<Players>
@{
    Layout = "_DefaultLayout";
    ViewBag.Title = "ManagePlayers";
}

<title>Manage Players - Dream League Soccer</title>


<h2 class="cover-heading">MANAGE PLAYERS</h2>

<table class="table table-dark" border="1">
    <thead>
        <tr>
            <th scope="col">Player Name</th>
            <th scope="col">Player Club</th>
            <th scope="col">Player Position</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Players p in Model)
        {
        <tr>
            <td>@p.PlayerName</td>
            <td>@p.PlayerClub</td>
            <td>@p.PlayerPosition</td>
        </tr>
        }
    </tbody>
</table>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <p class="lead">
                <a class="btn btn-primary" asp-controller="Players" asp-action="AddPlayers">
                    ADD
                </a>
            </p>
        </div>
        <div class="col-sm">
            <p class="lead">
                <a href="#" class="btn btn-lg btn-secondary">REASSIGN</a>
            </p>
        </div>
        <div class="col-sm">
            <p class="lead">
                <a href="#" class="btn btn-lg btn-secondary">DEREGISTER</a>
            </p>
        </div>
    </div>
</div>
